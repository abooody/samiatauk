<h1>Listing <%= 'Admin' if params[:role]=='admin' %> Users</h1>

<table cellspacing="0" class="display" id="table">
  <thead>
		<tr>
	    <th>Login</th>
	    <th>Name</th>
	    <th>Email</th>
	  </tr>
  </thead>
  <%- @users.each do |user|%>
    <tr>
      <td><%=h user.login %></td>
      <td><%=h user.name %></td>
      <td><%=h user.email %></td>
    
      <td><%=link_to 'Edit', edit_object_url(user) %></td>
      <td><%=link_to 'Destroy', object_url(user), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<br/>

<%= link_to 'New User', new_object_url %>

<%= render :partial => '/admin/scaffold/data_table' %>
